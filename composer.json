{
    "name": "dicibi/orgs",
    "description": "Database and base models for managing corporate structures.",
    "license": "MIT",
    "keywords": [
        "laravel",
        "organization",
        "structure",
        "corporate"
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^8.0|^9.0|^10.0",
        "illuminate/console": "^8.0|^9.0|^10.0",
        "illuminate/filesystem": "^8.0|^9.0|^10.0",
        "illuminate/contracts": "^8.0|^9.0|^10.0",
        "kalnoy/nestedset": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "jetbrains/phpstorm-attributes": "^1.0",
        "orchestra/testbench": ">=8.0"
    },
    "authors": [
        {
            "name": "Aditya Chandra",
            "email": "addeeandra@gmail.com"
        },
        {
            "name": "Yonathan Susanto",
            "email": "yonathansusanto100@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Dicibi\\Orgs\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dicibi\\Orgs\\Tests\\": "tests",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "Dicibi\\Orgs\\OrgServiceProvider"
            ]
        },
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}